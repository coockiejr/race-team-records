<!doctype html>
<html ng-app="mcrrcApp">
<head>
    <title>MCRRC Race Team Records</title>
	<link rel="stylesheet" href="dist/css/style.min.css">
	<link rel="stylesheet" href="libs/angular-dialog-service/dist/dialogs.min.css">
	<script src="dist/js/app.min.js"></script> 
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
	  ga('create', 'UA-59048159-1', 'auto');
	</script>
</head>
<body ng-controller="MainController">
	<div class="container">
		<div class="logo row">
			<h1><a ui-sref="/">MCRRC Racing Team</a></h1>
		</div>

		<!-- HEADER -->
		<nav class="navbar navbar-inverse" >
			<div class="navbar-header">
				<a ng-class="{active: $state.includes('/')}" class="navbar-brand" ui-sref="/">Home</a>
			</div>
			<% if (user && user.role === 'admin') { %>
				<ul class="nav navbar-nav">
					<li ng-class="{active: $state.includes('/records')}"><a ui-sref="/records">Team Records <i class="fa fa-trophy"></i></a></li>
					<li ng-class="{active: $state.includes('/results')}"><a ui-sref="/results">Team Results <i class="fa fa-list"></i></a></li>
					<li ng-class="{active: $state.includes('/members')}"><a ui-sref="/members">Team Members <i class="fa fa-users"></i></a></li>
					<li ng-class="{active: ($state.includes('/racetypes') || $state.includes('/report'))}" class="dropdown" dropdown on-toggle="toggled(open)">
				  	    <a href class="dropdown-toggle" dropdown-toggle>
				        Admin tools <span class="caret"></span>
				      </a>
				      <ul class="dropdown-menu">
				        <li ng-class="{active: $state.includes('/racetypes')}"><a ui-sref="/racetypes">Race Types</a></li>
				       	<li ng-class="{active: $state.includes('/report')}"><a ui-sref="/report">Create Report</a></li>
				       	<li ng-class="{active: $state.includes('/pdf')}"><a ui-sref="/pdf">Create PDF Report</a></li>
				      </ul>
				    </li>
					
				</ul>
				<ul class="nav navbar-nav" style="float: right">
					<li><a class="submitmenu" href="http://bit.ly/reportresult" target="_blank">Submit Result <i class="fa fa-plus-circle"></i></a></li>
					<li ng-class="{active: ($state.includes('/profile'))}" class="dropdown" dropdown on-toggle="toggled(open)">
				  	    <a href class="dropdown-toggle" dropdown-toggle>
				        <%= user.email %> <span class="caret"></span>
				      </a>
				      <ul class="dropdown-menu">
				        <li><a ui-sref="/profile">Profile</a></li>
				        <li><a href="/logout">Logout</a></li>
				      </ul>
				    </li>
				</ul>
			<%}else{ %>
				<ul class="nav navbar-nav" >
					<li ng-class="{active: $state.includes('/records')}"><a ui-sref="/records">Team Records <i class="fa fa-trophy"></i></a></li>
					<li ng-class="{active: $state.includes('/results')}"><a ui-sref="/results">Team Results <i class="fa fa-list"></i></a></li>
					<li ng-class="{active: $state.includes('/members')}"><a ui-sref="/members">Team Members <i class="fa fa-users"></i></a></li>
					
				</ul>
				<ul class="nav navbar-nav" style="float: right" >
					<li><a class="submitmenu" href="http://bit.ly/reportresult" target="_blank">Submit Result <i class="fa fa-plus-circle"></i></a></li>
				</ul>
			<%}%>	
		</nav>

		<div ui-view></div>
		<footer><div class="row"><div class="col-sm-4 text-left">Comments, questions or request? <a ui-sref="/contact">contact us<i class="fa fa-email"></i></a></div><div class="col-sm-4 text-center"><a class="transparent" ui-sref="/login">admin login</a></div><div class="col-sm-4 text-right"><a title="Montgomery County Road Runners Club" href="http://www.mcrrc.org" target="_blank">MCRRC</a></div></div></footer>
	</div>
</body>

</html>
